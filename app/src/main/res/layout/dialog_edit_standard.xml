<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="修改标准"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_standard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/edit_background"
        android:inputType="text"
        android:minHeight="100dp"
        android:maxHeight="500dp"
        android:singleLine="false"
        android:scrollHorizontally="false"
        android:padding="10dp"
        android:hint="请输入试验标准"
        android:textSize="14sp"
        android:textColor="@color/textcolorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <com.deadline.statebutton.StateButton
        android:id="@+id/btn_cancel"
        android:layout_width="120dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="取消"
        app:animationDuration="200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_sure"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/edit_standard"
        app:normalBackgroundColor="@color/colorAccent"
        app:normalTextColor="@android:color/white"

        app:pressedBackgroundColor="@color/colorPrimaryDark"
        app:pressedTextColor="@android:color/white"

        app:round="true"
        app:unableBackgroundColor="@android:color/darker_gray"
        app:unableTextColor="@android:color/darker_gray" />

    <com.deadline.statebutton.StateButton
        android:id="@+id/btn_sure"
        android:layout_width="120dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:text="确定"
        app:animationDuration="200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_cancel"

        app:layout_constraintTop_toBottomOf="@+id/edit_standard"
        app:normalBackgroundColor="@color/colorAccent"
        app:normalTextColor="@android:color/white"

        app:pressedBackgroundColor="@color/colorPrimaryDark"
        app:pressedTextColor="@android:color/white"

        app:round="true"
        app:unableBackgroundColor="@android:color/darker_gray"
        app:unableTextColor="@android:color/darker_gray" />

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:src="@mipmap/common_closed"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title" />

</android.support.constraint.ConstraintLayout>
